<h2>Connexion</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= f.input :email %>
  <%= f.input :password, label: "Mot de passe" %>
  <% if devise_mapping.rememberable? %>
    <%= f.input :remember_me, as: :boolean, inline_label: 'Se souvenir de moi' %>
  <% end %>
  <%= f.button :submit, "Connexion", class: "btn-primary" %>
<% end %>

<%# Précédent code %>
<% if false %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, "Email" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "Mot de passe" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Se souvenir de moi" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Connexion" %>
  </div>
<% end %>

<% end %>
<%# Fin précédent code %>

