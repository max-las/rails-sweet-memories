<p id="notice"><%= notice %></p>

<h1>Memories</h1>

<table>
  <thead>
    <tr>
      <th>User ID</th>
      <th>Title</th>
      <th>Date</th>
      <th>Image</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memories.each do |memory| %>
      <tr>
        <td><%= memory.user_id %></td>
        <td><%= memory.title %></td>
        <td><%= memory.date %></td>
        <td><%= image_tag(memory.picture, height: '100') %></td>
        <td><%= memory.note %></td>
        <td><%= link_to 'Show', memory %></td>
        <td><%= link_to 'Edit', edit_memory_path(memory) %></td>
        <td><%= link_to 'Destroy', memory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

